<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerInside"
        android:background="@color/lightcoral"
        android:visibility="visible"
        android:id="@+id/fab_item1"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="22dp"
        android:src="@drawable/ic_folder" />


    <ImageView
        android:scaleType="centerInside"
        android:background="@color/thistle"
        android:visibility="visible"
        android:id="@+id/fab_item2"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="22dp"
        android:src="@drawable/ic_movie" />


    <ImageView
        android:scaleType="centerInside"
        android:background="@color/lightyellow"
        android:visibility="visible"
        android:id="@+id/fab_item3"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="22dp"
        android:src="@drawable/ic_screen_shot" />

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/purple2"
        android:id="@+id/fab_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add" />

</FrameLayout>